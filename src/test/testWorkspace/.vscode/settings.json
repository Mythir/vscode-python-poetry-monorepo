{
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.rulers": [
            120
        ]
    },
    "[yaml]": {
        "editor.rulers": [
            80
        ]
    },
    "python.analysis.extraPaths": [
        "src/python/libs/mylib",
        "src/python/libs/anotherlib",
    ],
    "python.testing.pytestArgs": [
        "src/python/myapplication",
        "--cov-config=src/python/myapplication/pyproject.toml"
    ],
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "poetryMonorepo.pytest.enabled": true,
    "poetryMonorepo.pytest.setCovConfig": false
}
